#!/bin/bash
# Pre-push hook for AI Admissions Assistant
# Runs Server tests before allowing push to remote

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${YELLOW}=== Running pre-push tests ===${NC}\n"

# Get the root directory of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)
SERVER_DIR="$REPO_ROOT/Server"

# Check if Server directory exists
if [ ! -d "$SERVER_DIR" ]; then
    echo -e "${RED}Error: Server directory not found at $SERVER_DIR${NC}"
    exit 1
fi

# Navigate to Server directory
cd "$SERVER_DIR"

# Check if virtual environment exists and activate it
if [ -d "venv" ]; then
    echo -e "${GREEN}Activating virtual environment...${NC}"
    source venv/bin/activate
elif [ -d ".venv" ]; then
    echo -e "${GREEN}Activating virtual environment...${NC}"
    source .venv/bin/activate
fi

# Check if pytest is available
if ! command -v pytest &> /dev/null; then
    echo -e "${YELLOW}pytest not found. Installing test dependencies...${NC}"
    if [ -f "requirements-test.txt" ]; then
        pip install -q -r requirements-test.txt
    else
        echo -e "${RED}Error: requirements-test.txt not found${NC}"
        exit 1
    fi
fi

# Run the tests
echo -e "${GREEN}Running Server tests...${NC}\n"

# Run pytest with minimal output
if pytest -q --tb=short; then
    echo -e "\n${GREEN}✓ All tests passed! Proceeding with push...${NC}\n"
    exit 0
else
    echo -e "\n${RED}✗ Tests failed! Push aborted.${NC}"
    echo -e "${YELLOW}Please fix the failing tests before pushing.${NC}\n"
    exit 1
fi
